{
  "name": "command-runner-v2",
  "displayName": "Command Runner Updated",
  "description": "Run commands in the terminal from markdowns and plain text files with custom display names and named terminals.",
  "publisher": "s4mu31",
  "version": "0.3.0",
  "license": "MIT",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/S4mC/command-runner"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "terminal",
    "cmd",
    "markdown",
    "run",
    "codelens",
    "command execution",
    "named terminals",
    "custom display"
  ],
  "activationEvents": [
    "onLanguage:Markdown",
    "onLanguage:plaintext"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "title": "Enable",
        "command": "command-runner.enableCodeLens",
        "category": "Command Runner"
      },
      {
        "title": "Disable",
        "command": "command-runner.disableCodeLens",
        "category": "Command Runner"
      }
    ],
    "configuration": {
      "properties": {
        "command-runner.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable CodeLens for command execution"
        },
        "command-runner.maxDisplayLength": {
          "type": "number",
          "default": 15,
          "description": "Maximum length for command display in CodeLens before truncation"
        },
        "command-runner.maxCustomNameLength": {
          "type": "number",
          "default": 50,
          "description": "Maximum length for custom display names before truncation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "mocha out/test/suite/**/*.test.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.6.2",
    "eslint": "^9.37.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.4",
    "typescript": "^5.9.3",
    "vscode-test": "^1.6.1"
  }
}
